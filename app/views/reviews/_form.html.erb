<%= form_with(model: review, class: 'mb-5') do |form| %>
  <%= form.hidden_field :book_id %>

  <div class="mb-3">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit(class: 'btn btn-primary') %>
  </div>
<% end %>
