<div class="container">
  <h1><%= @book.title %></h1>
  <p><strong>Publisher:</strong> <%= @book.publisher.name %></p>
  <p><strong>Authors:</strong> <%= @book.author_names.join(', ') %></p>

  <h2>Reviews</h2>
  <%= render partial: 'reviews/form', locals: { review: current_user.reviews.new(book: @book) } %>
  <%= render partial: 'reviews/review', collection: @reviews, as: :review %>
</div>