<div class="container">
  <div id="clearance" class="password-reset">
    <h2><%= t(".title") %></h2>

    <p><%= t(".description") %></p>

    <%= form_for :password, url: passwords_path do |form| %>
      <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email', class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.submit(class: 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</div>
